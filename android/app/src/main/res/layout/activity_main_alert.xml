<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    tools:context=".MainAlert"
    android:gravity="bottom"
    android:padding="38dp">

    <androidx.cardview.widget.CardView
        android:elevation="4dp"
        cardview:cardCornerRadius="4dp"
        android:clickable="true"
        app:cardBackgroundColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sino"/>

            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/nome_loja"
                android:textColor="#000"
                android:text="FogaÃ§a 123"
                android:fontFamily="@font/boltsemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/desticon"/>
                <TextView
                    android:textSize="18dp"
                    android:id="@+id/endereco_loja"
                    android:fontFamily="@font/boltregular"
                    android:textColor="#000"
                    android:text="Teste Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/iconquantpedido"/>
                <TextView
                    android:textSize="18dp"
                    android:fontFamily="@font/boltregular"
                    android:id="@+id/quantitens_loja"
                    android:textColor="#000"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <Button
                android:theme="@style/botaoaceitar"
                android:text="Aceitar"
                android:fontFamily="@font/boltsemibold"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/button_aceitar"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>